<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"/>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/loading_splash</item>
    </style>
    <style name="DateTextStyle" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/darkBlue</item>
    </style>
    <style name="LightColorDateTextStyle" parent="@style/Widget.AppCompat.TextView">
        <item name="android:textColor">@color/lightGrey</item>
    </style>
    <style name="RoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>
    <style name="AnimationPopupStyle">
        <item name="android:windowEnterAnimation">@anim/openanim</item>
        <item name="android:windowExitAnimation">@anim/closeanim</item>
    </style>

    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- 날짜 선택 헤더의 색상 변경 -->
        <item name="colorAccent">@color/lightBlue</item>
        <!-- 선택된 날짜의 색상 변경 -->
        <item name="android:calendarTextColor">@color/white</item>
        <!-- 선택되지 않은 날짜의 색상 변경 -->
        <item name="android:textColorSecondary">@color/black</item>
    </style>


</resources>